@model IEnumerable<SUM_Project.Models.TilbudModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Liste over igangværende projekter</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.kunde_id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.titel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.beskrivelse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.start_dato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.slut_dato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.projekt_ansvarlig)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kunde_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.titel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.beskrivelse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.start_dato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.slut_dato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.projekt_ansvarlig)
            </td>
            <td>  
                <a asp-action="Details" asp-route-id="@item.tilbud_id">Detaljer</a>
            </td>
        </tr>
}
    </tbody>
</table>
